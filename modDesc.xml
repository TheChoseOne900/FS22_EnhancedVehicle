<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<modDesc descVersion="63">
  <author>Majo76</author>
  <contributors>dziuch</contributors>

  <version>1.0.0.0-rc2</version>

  <title>
    <de>EnhancedVehicle</de>
    <en>EnhancedVehicle</en>
    <it>EnhancedVehicle</it>
  </title>

  <description>
    <de><![CDATA[Einfacher Fahrspurassistent. Differentialsperren und Antriebsmodi für dein Fahrzeug. Mehr Fahrzeugsdetails im HUD.]]></de>
    <en><![CDATA[Simple track assistant. Differential locks and wheel drive modes for your vehicle. Shows more vehicle details on HUD.]]></en>
    <it><![CDATA[Assistente di corsia semplice. Bloccaggi differenziali e modalità di guida per il tuo veicolo. Maggiori dettagli sul veicolo nell'HUD.]]></it>
  </description>

  <iconFilename>FS22_EnhancedVehicle.dds</iconFilename>

  <multiplayer supported="true"/>

  <l10n filenamePrefix="translations/translation"/>

  <actions>
    <action name="FS22_EnhancedVehicle_MENU"            category="VEHICLE"/>
    <action name="FS22_EnhancedVehicle_SNAP_ONOFF"      category="VEHICLE"/>
    <action name="FS22_EnhancedVehicle_SNAP_REVERSE"    category="VEHICLE"/>
    <action name="FS22_EnhancedVehicle_SNAP_LINES"      category="VEHICLE"/>
    <action name="FS22_EnhancedVehicle_SNAP_GRID_ONOFF" category="VEHICLE"/>
    <action name="FS22_EnhancedVehicle_SNAP_GRID_RESET" category="VEHICLE"/>
    <action name="FS22_EnhancedVehicle_SNAP_TRACK"      category="VEHICLE" axisType="FULL"/>
    <action name="FS22_EnhancedVehicle_SNAP_TRACKP"     category="VEHICLE" axisType="FULL"/>
    <action name="FS22_EnhancedVehicle_SNAP_TRACKW"     category="VEHICLE" axisType="FULL"/>
    <action name="FS22_EnhancedVehicle_SNAP_TRACKO"     category="VEHICLE" axisType="FULL"/>
    <action name="FS22_EnhancedVehicle_SNAP_HL_MODE"    category="VEHICLE"/>
    <action name="FS22_EnhancedVehicle_SNAP_ANGLE1"     category="VEHICLE" axisType="FULL"/>
    <action name="FS22_EnhancedVehicle_SNAP_ANGLE2"     category="VEHICLE" axisType="FULL"/>
    <action name="FS22_EnhancedVehicle_SNAP_ANGLE3"     category="VEHICLE" axisType="FULL"/>
    <action name="FS22_EnhancedVehicle_FD"              category="VEHICLE"/>
    <action name="FS22_EnhancedVehicle_RD"              category="VEHICLE"/>
    <action name="FS22_EnhancedVehicle_BD"              category="VEHICLE"/>
    <action name="FS22_EnhancedVehicle_DM"              category="VEHICLE"/>
    <action name="FS22_EnhancedVehicle_AJ_REAR_UPDOWN"  category="VEHICLE"/>
    <action name="FS22_EnhancedVehicle_AJ_REAR_ONOFF"   category="VEHICLE"/>
    <action name="FS22_EnhancedVehicle_AJ_FRONT_UPDOWN" category="VEHICLE"/>
    <action name="FS22_EnhancedVehicle_AJ_FRONT_ONOFF"  category="VEHICLE"/>
  </actions>

  <inputBinding>
    <actionBinding action="FS22_EnhancedVehicle_MENU">
      <binding device="KB_MOUSE_DEFAULT" input="KEY_rctrl KEY_KP_divide" axisComponent="+" inputComponent="+" index="1"/>
      <binding device="KB_MOUSE_DEFAULT" input="KEY_lctrl KEY_KP_divide" axisComponent="+" inputComponent="+" index="1"/>
    </actionBinding>
    <actionBinding action="FS22_EnhancedVehicle_SNAP_ONOFF">
      <binding device="KB_MOUSE_DEFAULT" input="KEY_rctrl KEY_end" axisComponent="+" inputComponent="+" index="1"/>
    </actionBinding>
    <actionBinding action="FS22_EnhancedVehicle_SNAP_REVERSE">
      <binding device="KB_MOUSE_DEFAULT" input="KEY_rctrl KEY_home" axisComponent="+" inputComponent="+" index="1"/>
    </actionBinding>
    <actionBinding action="FS22_EnhancedVehicle_SNAP_LINES">
      <binding device="KB_MOUSE_DEFAULT" input="KEY_rshift KEY_home" axisComponent="+" inputComponent="+" index="1"/>
    </actionBinding>
    <actionBinding action="FS22_EnhancedVehicle_SNAP_GRID_ONOFF">
      <binding device="KB_MOUSE_DEFAULT" input="KEY_rctrl KEY_KP_1" axisComponent="+" inputComponent="+" index="1"/>
    </actionBinding>
    <actionBinding action="FS22_EnhancedVehicle_SNAP_GRID_RESET">
      <binding device="KB_MOUSE_DEFAULT" input="KEY_rctrl KEY_KP_2" axisComponent="+" inputComponent="+" index="1"/>
    </actionBinding>
    <actionBinding action="FS22_EnhancedVehicle_SNAP_TRACK">
      <binding device="KB_MOUSE_DEFAULT" input="KEY_rctrl KEY_KP_4" axisComponent="-"/>
      <binding device="KB_MOUSE_DEFAULT" input="KEY_rctrl KEY_KP_6" axisComponent="+"/>
    </actionBinding>
    <actionBinding action="FS22_EnhancedVehicle_SNAP_TRACKP">
      <binding device="KB_MOUSE_DEFAULT" input="KEY_rctrl KEY_KP_minus" axisComponent="-"/>
      <binding device="KB_MOUSE_DEFAULT" input="KEY_rctrl KEY_KP_plus"  axisComponent="+"/>
    </actionBinding>
    <actionBinding action="FS22_EnhancedVehicle_SNAP_TRACKW">
      <binding device="KB_MOUSE_DEFAULT" input="KEY_rshift KEY_KP_minus" axisComponent="-"/>
      <binding device="KB_MOUSE_DEFAULT" input="KEY_rshift KEY_KP_plus"  axisComponent="+"/>
    </actionBinding>
    <actionBinding action="FS22_EnhancedVehicle_SNAP_TRACKO">
      <binding device="KB_MOUSE_DEFAULT" input="KEY_ralt KEY_KP_minus" axisComponent="-"/>
      <binding device="KB_MOUSE_DEFAULT" input="KEY_ralt KEY_KP_plus"  axisComponent="+"/>
    </actionBinding>
    <actionBinding action="FS22_EnhancedVehicle_SNAP_HL_MODE">
      <binding device="KB_MOUSE_DEFAULT" input="KEY_rctrl KEY_KP_multiply" axisComponent="+" inputComponent="+" index="1"/>
    </actionBinding>
    <actionBinding action="FS22_EnhancedVehicle_SNAP_ANGLE1">
      <binding device="KB_MOUSE_DEFAULT" input="KEY_rctrl KEY_pagedown" axisComponent="-"/>
      <binding device="KB_MOUSE_DEFAULT" input="KEY_rctrl KEY_pageup"   axisComponent="+"/>
    </actionBinding>
    <actionBinding action="FS22_EnhancedVehicle_SNAP_ANGLE3">
      <binding device="KB_MOUSE_DEFAULT" input="KEY_rshift KEY_pagedown" axisComponent="-"/>
      <binding device="KB_MOUSE_DEFAULT" input="KEY_rshift KEY_pageup"   axisComponent="+"/>
    </actionBinding>
    <actionBinding action="FS22_EnhancedVehicle_SNAP_ANGLE2">
      <binding device="KB_MOUSE_DEFAULT" input="KEY_rshift KEY_rctrl KEY_pagedown" axisComponent="-"/>
      <binding device="KB_MOUSE_DEFAULT" input="KEY_rshift KEY_rctrl KEY_pageup"   axisComponent="+"/>
    </actionBinding>
    <actionBinding action="FS22_EnhancedVehicle_FD">
      <binding device="KB_MOUSE_DEFAULT" input="KEY_rctrl KEY_KP_7" axisComponent="+" inputComponent="+" index="1"/>
    </actionBinding>
    <actionBinding action="FS22_EnhancedVehicle_RD">
      <binding device="KB_MOUSE_DEFAULT" input="KEY_rctrl KEY_KP_8" axisComponent="+" inputComponent="+" index="1"/>
    </actionBinding>
    <actionBinding action="FS22_EnhancedVehicle_BD">
      <binding device="KB_MOUSE_DEFAULT" input="" axisComponent="+" inputComponent="+" index="1"/>
    </actionBinding>
    <actionBinding action="FS22_EnhancedVehicle_DM">
      <binding device="KB_MOUSE_DEFAULT" input="KEY_rctrl KEY_KP_9" axisComponent="+" inputComponent="+" index="1"/>
    </actionBinding>
    <actionBinding action="FS22_EnhancedVehicle_AJ_REAR_UPDOWN">
      <binding device="KB_MOUSE_DEFAULT" input="KEY_lalt KEY_1" axisComponent="+" inputComponent="+" index="1"/>
    </actionBinding>
    <actionBinding action="FS22_EnhancedVehicle_AJ_REAR_ONOFF">
      <binding device="KB_MOUSE_DEFAULT" input="KEY_lalt KEY_2" axisComponent="+" inputComponent="+" index="1"/>
    </actionBinding>
    <actionBinding action="FS22_EnhancedVehicle_AJ_FRONT_UPDOWN">
      <binding device="KB_MOUSE_DEFAULT" input="KEY_lalt KEY_3" axisComponent="+" inputComponent="+" index="1"/>
    </actionBinding>
    <actionBinding action="FS22_EnhancedVehicle_AJ_FRONT_ONOFF">
      <binding device="KB_MOUSE_DEFAULT" input="KEY_lalt KEY_4" axisComponent="+" inputComponent="+" index="1"/>
    </actionBinding>
  </inputBinding>

  <extraSourceFiles>
    <sourceFile filename="FS22_EnhancedVehicle_Loader.lua" />
  </extraSourceFiles>

</modDesc>
